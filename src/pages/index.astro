---
import Layout from "@layouts/BrowseLayout.astro";
import Leaf from "@components/leaf.svelte";
import { getCollection } from "astro:content";
import Threshold from "@components/threshold.svelte";
const allArticles = await getCollection("articles");
---

<Layout title="Welcome to LoreHouse.">
  <Threshold />
  <section>
    <h2 class="my-6 text-center font-display text-6xl font-semibold">
      Latest Utterings
    </h2>
    <ul
      class="leaflist mx-auto mb-16 justify-items-center gap-8 px-4 lg:max-w-5xl xl:max-w-7xl"
    >
      {
        allArticles.map((article) => (
          <li class="aspect-foolscap-tall max-w-sm">
            <Leaf {article} />
          </li>
        ))
      }
    </ul>
  </section>
</Layout>

<style lang="postcss">
  .leaflist {
    @apply w-fit grid auto-cols-max grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-3;
  }
</style>
